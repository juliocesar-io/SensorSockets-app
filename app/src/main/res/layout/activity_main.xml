<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal" >

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monitoreo remoto"
        android:layout_below="@+id/text_pressure"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="66dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="Sensores Activos"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_pressure"
        android:layout_below="@+id/text_humidity"
        android:layout_marginTop="34dp"
        android:text="PresiÃ³n Barometrica"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/text_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/text_humidity"
        android:layout_below="@+id/textView3"
        android:text="pres"
        android:textSize="16sp"
        android:textColor="#7e7e7e" />

    <TextView
        android:id="@+id/text_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:text="hum"
        android:textSize="16sp"
        android:textColor="#7e7e7e" />

    <TextView
        android:id="@+id/text_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:text="temps"
        android:textSize="16sp"
        android:textColor="#7e7e7e" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView5"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="34dp"
        android:text="Temperatura Ambiental"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_temperature"
        android:layout_below="@+id/text_temperature"
        android:layout_marginTop="28dp"
        android:text="Humedad"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="17sp" />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/switch1"
        android:layout_alignStart="@+id/switch1" />

</RelativeLayout>